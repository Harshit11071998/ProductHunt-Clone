<% products.each do |product| %>
  <div class="card mb-2 ">
    <div class="row no-gutters product_container">
      <div class="col-md-2 product_img">
        <p>
           <%= image_tag(product.image, :size => "150x100") %>
        </p>
      </div>
      <div class="col-md-8 product_body">
        <div class="card-body">
          <div class = "card-title-text">
           <h5 class="card-title"><%= link_to product.product_name, product %></h5>
           <p class="card-text"><%= product.product_tagline %></p>
          </div>
          <div class="count">
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="#696161" class="bi bi-chat-fill" viewBox="0 0 16 16">
               <path d="M8 15c4.418 0 8-3.134 8-7s-3.582-7-8-7-8 3.134-8 7c0 1.76.743 3.37 1.97 4.6-.097 1.016-.417 2.13-.771 2.966-.079.186.074.394.273.362 2.256-.37 3.597-.938 4.18-1.234A9.06 9.06 0 0 0 8 15z"/>
               </svg>
               <span><%= pluralize(product.comments.count, "") %></span>
          </div>
        </div>
      </div>
      <div class= "upvote ">
      <% if product.voted_by? current_user %>
            <%= link_to product_vote_path(product), method: :delete do %>
              <span><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="red" class="bi bi-triangle-fill" viewBox="0 0 16 16">
          <path fill-rule="evenodd" d="M7.022 1.566a1.13 1.13 0 0 1 1.96 0l6.857 11.667c.457.778-.092 1.767-.98 1.767H1.144c-.889 0-1.437-.99-.98-1.767L7.022 1.566z"/>
          </svg></span>
              <div><%= product.votes.count %></div>
            <% end %>
          <% else %>
            <%= link_to product_vote_path(product), method: :post do %>
             <span><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black" class="bi bi-triangle-fill" viewBox="0 0 16 16">
          <path fill-rule="evenodd" d="M7.022 1.566a1.13 1.13 0 0 1 1.96 0l6.857 11.667c.457.778-.092 1.767-.98 1.767H1.144c-.889 0-1.437-.99-.98-1.767L7.022 1.566z"/>
          </svg></span>
              <div ><%= product.votes.count %></div>
            <% end %>
          <% end %>
       <!-- <span><svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-triangle-fill" viewBox="0 0 16 16">
          <path fill-rule="evenodd" d="M7.022 1.566a1.13 1.13 0 0 1 1.96 0l6.857 11.667c.457.778-.092 1.767-.98 1.767H1.144c-.889 0-1.437-.99-.98-1.767L7.022 1.566z"/>
          </svg></span>
          <div>5</div>  -->   
      </div>
    </div>
  </div>
<% end %>